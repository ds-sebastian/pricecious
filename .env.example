# Environment Configuration Example
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/pricewatch

# Browserless
BROWSERLESS_URL=ws://browserless:3000

# AI Provider (choose one)
# For OpenAI
# AI_PROVIDER=openai
# AI_MODEL=gpt-4o
# AI_API_KEY=sk-...

# For Ollama (local)
# AI_PROVIDER=ollama
# AI_MODEL=gemma3:4b
# AI_API_BASE=http://localhost:11434

# For Anthropic
# AI_PROVIDER=anthropic
# AI_MODEL=claude-3-5-sonnet-20241022
# AI_API_KEY=sk-ant-...

# Application
LOG_LEVEL=INFO
# SQL_ECHO=false  # Set to true to log all SQL queries

# Scraper Settings
SCRAPER_TIMEOUT=90000
SMART_SCROLL_ENABLED=false
SMART_SCROLL_PIXELS=350
TEXT_CONTEXT_ENABLED=false
TEXT_CONTEXT_LENGTH=5000

# Scheduler
REFRESH_INTERVAL_MINUTES=60

# AI Advanced
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=300
CONFIDENCE_THRESHOLD_PRICE=0.5
CONFIDENCE_THRESHOLD_STOCK=0.5
ENABLE_JSON_REPAIR=true
